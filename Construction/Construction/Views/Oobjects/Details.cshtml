@model Construction.Models.Oobject

@{
    ViewData["Title"] = "Подробная информация";
}

<h1>Подробная информация</h1>

<div>
    <h4>Объект</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Прораб
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Foremen.Name)
            @Html.DisplayFor(model => model.Foremen.LastName)
        </dd>
        <dt class="col-sm-2">
            Фотография объекта
        </dt> 
    </dl>
    @if (@Model.Photo != null)
    {
        <img class="mt-4 mb-4" width="200"
             src=@Model.Photo>
    }
</div>
@if (User.IsInRole("admin,guest"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.OobjectID">Изменить</a> |
        <a asp-action="Index">Вернуться к списку</a>
    </div>
}
else  
{
    <div>
        <a asp-action="Index">Назад к списку</a>
    </div>
}
